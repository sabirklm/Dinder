<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/dogImageView"
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:contentDescription="@string/default_dog"
        app:srcCompat="@drawable/default_dog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/dislikeImageButton"
            android:layout_width="182dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/dislike"
            app:srcCompat="@drawable/dislike_img" />

        <ImageButton
            android:id="@+id/likeImageButton"
            android:layout_width="211dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/default_dog"
            app:srcCompat="@drawable/like_img" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>